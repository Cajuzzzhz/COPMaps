name: CreateExpressRoute
description: |-
  Sempre que eu criar um arquivo em routes/ terminando com .js,
  adicione um template b√°sico de Router Express com import e export.
rules:
  - pattern: ".*routes/.*\\.js"
    actions:
      - insert_top: |
          const express = require('express');
          const router = express.Router();
        file: "$CURRENT_FILE"
      - insert_bottom: |
          module.exports = router;
        file: "$CURRENT_FILE"